<article>
  <% if current_employee.try(:admin?) %>
    <h3>管理者管理画面</h3>
    <button type="button" class=" btn btn-info" type="button"><%= link_to "マスタ登録", rails_admin_path , id: "employee_create" %></button>
  <% else %>
    <h3>メニュー画面</h3>
  <% end %>
  <br>
<hr>
  <br>
  <div>
    <button type="button" class="btn btn-danger" type="button"><%= link_to "新規作成", new_customer_management_path(customer_id: @customer_id, count: @count), id: "create_report" %></button>
    <button type="button" class="btn btn-success" type="button"><%= link_to "ユーザ登録", new_customeruser_path, id: "system_user_create" %></button>
  </div>
  <br>
<hr>
  <div>
    <%= search_form_for @q ,url: customer_managements_path do |f| %>
          タイトル：  <%= f.search_field :title_cont, class: 'form-control' , placeholder: '一部入力も可能です' %> 
          日時:       <%= f.search_field :apoint_at_eq, class: 'form-control' , placeholder: '一部入力も可能です' %>
                      <%= f.submit "検索" %>
    <% end %>
    <button type="button" class="btn btn-warning" type="button"><%= link_to "状況管理", id: "check_list" %></button>
  </div>
<hr>
<table class="col-md-12">
  <thead>
    <tr>
      <th class="col-md-1">部署名</th>
      <th class="col-md-4">タイトル</th>
      <th class="col-md-2">会社名</th>
      <th class="col-md-1" >発生日</th>
      <th class="col-md-1">期限</th>
      <th class="col-md-1">優先度</th>
      <th class="col-md-1">詳細</th>
    </tr>
  </thead>
  <tbody>

      <% @projects.each do |pt| %>
      <tr>

 <td><%= pt.departments.name %></td> 

        <td><%= pt.title %></td>
        <td><%= pt.customer.name %></td>
        <td><%= pt.apoint_at.strftime("%Y年%m月%d日") %></td>
        <td><%= pt.deadline %></td>
        <td><% if pt.priority = 1 %>
              高
            <% elsif pt.priority = 2 %>
              中
            <% else %>
              低
            <% end %>
        </td>
        <td><button type="button" class="btn btn-info" type="button"><%= link_to '詳細', customer_management_path(pt), id: "project_report_view" %></td>
      </tr>
      <% end %>
  </tbody>
  <%= paginate @projects %> 
</table>
<br>
