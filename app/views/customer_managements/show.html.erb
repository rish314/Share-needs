          <td>システム</td>
        </tr>
        <tr class="table-light">
          <td><%= @project.package %></td>
        </tr>
        <tr class="table-info">
             <td>機能</td>
        </tr>
        <tr class="table-light">
          <td>
            <%= @project.feature.name %>
          </td>
        </tr>
        <tr class="table-info">
          <td>面談日</td>
        </tr>
        <tr class="table-light">
          <td><%= @project.apoint_at %></td>
        </tr>
        <tr class="table-info">
          <td>面談詳細</td>
        </tr>
        <tr class="table-light">
            <td><%= @project.description %></td>
        </tr>
