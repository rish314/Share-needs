        <tr class="table-info">
            <td>タイトル</td>
        </tr>
        <tr class="table-light">
            <td><%= @project.title %></td>
        </tr>
        <tr class="table-info">
            <td>部署</td>
        </tr>
        <tr class="table-light">
            <td><%= @project.department %></td>
        </tr>
        <tr class="table-info">
          <td>弊社担当</td>
        </tr>
        <tr class="table-light">
          <td><%= @project.employee.name %></td>
        </tr>
        <tr class="table-info">
          <td>お客様</td>
        </tr>
        <tr class="table-light">
          <td><%= @project.customer %></td>
