<main>
<br>
<%= form_with(model: @project, url: customer_management_path, local: true) do |form| %>

<br>
<br>
<h1>レポート編集</h1>
  <% if @project.errors.any? %>
    <div id="error_explanation">
      <h2><%=  @project.errors.count %> <%= t('view.error') %></h2>
      <ul>

        <% @project.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :title %><br>
    <%= form.text_field :title %>
  </div>

  <br>

  <br>
  <br>
    <h4>部署</h4>

<!-- remote: trueを追加することでajaxでparams[:project][department_id]をpostできる -->
<div>
  <%= form.select :department_id, options_from_collection_for_select( @department, :id, :name),
  {prompt: '選択してください'}, {data: {remote: true, url: url_for(action: :department_employee)}} %>
</div>
<br>
<h4>担当</h4>
<!-- 色を選択するとここに動的にセレクトボックスが描画される -->
<div id="employee-select">
<h5><%= current_employee.name %></h5>
</div>
  ※部署を選択すると社員が選べます。

<br>
  <h4>企業名</h4>
<!-- remote: trueを追加することでajaxでparams[:project][customer_id]をpostできる -->
<div>
  <%= form.select :customer_id, options_for_select(Customer.all.map{|cst| [( cst.name ), cst.id]}) , { include_blank: '選択してください'},
   {data: {remote: true, url: url_for(action: :customer_customeruser)}} %>
</div>

<br>
  <h4>お客様名</h4>
  <!-- 色を選択するとここに動的にセレクトボックスが描画される -->
  <div id="customeruser-select">
  <h5>お客様の企業名を選択してください</h5>
  </div>
  ※企業名を選択すると社員が選べます。
<br>

<br>
  <h4>システム</h4>
  <!-- remote: trueを追加することでajaxでparams[:project][package_id]をpostできる -->
  <div>
    <%= form.select :package_id, options_for_select(Package.all.map{|cst| [( cst.name ), cst.id]}) , { include_blank: '選択してください'},
    {data: {remote: true, url: url_for(action: :package_feature)}} %>
  </div>

<br>
  <h4>機能</h4>
  <!-- 色を選択するとここに動的にセレクトボックスが描画される -->
  <div id="feature-select">
    <h5>システムを選択してください</h5>
  </div>
  ※システムを選択すると機能が選べます。
<br>

    <%
=begin%>
 <%= form.select :department_id, options_for_select(Department.where( web_flg: true ).all.map{|dpt| [( dpt.name ) , dpt.id]} ), include_blank: "選択して下さい" %> 

  <div>
    <table>
    <% Department.where(web_flg: true).all.each do |dm| %>
      <tr>
        <th>
          <%= dm.name %>
        </th>
          <td>
          <div>
            <% Employee.where(department_id: dm.id).all.each do |emp| %>
              <%= form.radio_button :employee_id, emp.id %>
              <%= emp.name %><br>
            <% end %>
          </div>
          </td>
      </tr>
    <% end %>
    </table>

  </div> 
<%
=end%>
<br>

    <%
=begin%>
 <h5>企業名/お客様名</h5>
      <% @customer.each do |ct| %>
    <h4><%= ct.name %></h4>
      <% end %>

  <div>
    <table>
    <% Customer.all.each do |ct| %>
      <tr>
        <th>
        <label><%= ct.name %></label>
        </th>
          <td>
          <div>
            <% Customeruser.where(customer_id: ct.id).all.each do |usr| %>
              <%= form.radio_button :customeruser_id, usr.id %>
              <%= usr.name %><br>
            <% end %>
          </div>
          </td>
      </tr>
    <% end %>
    </table>
  </div>
<br>
    <h5>システム/機能</h5>
    <% @package.each do |pk| %>
    <h4><%= pk.name %></h4>
    <% end %>

    <table>
    <% Package.all.each do |pcg| %>
      <tr>
        <th>
        <label><%= pcg.name %></label>
        </th>
          <td>
          <div>
            <% Feature.where(package_id: pcg.id).all.each do |ft| %>
              <%= form.radio_button :feature_id, ft.id %>
              <%= ft.name %><br>
            <% end %>
          </div>
          </td>
      </tr>
    <% end %>
    </table>
  </div> 
<%
=end%>

  <br>
  <div>
    <p><%= form.label :priority %></p>
    <p><%= form.select :priority, Project.priorities.keys.map {|k| [I18n.t("enums.projects.priority.#{k}"), k]}, include_blank: "選択して下さい" %></p>
  </div> 
  <br>

  <div>
    <p><%= form.label :apoint_at %></p>
    <p><%= form.date_field(
          :apoint_at, id: "apoint_at", class: "form-control",
          use_month_numbers: true, # jan, febとかじゃなくて数字で月を表現
          start_year:     (Time.now.year), # 何年から表示させるか
          end_year:       (Time.now.year), # 何年まで表示させるか
          default:        Date.new(1989, 1, 1), # 最初に表示されている年月日
          date_separator: '/') # 年月日を仕切る文字
        %></p>
  </div>

  <div>
    <p><%= form.label :deadline %> (未入力可)</p>
    <p><%= form.date_field(
          :deadline, id: "deadline", class: "form-control",
          use_month_numbers: true, # jan, febとかじゃなくて数字で月を表現
          start_year:     (Time.now.year), # 何年から表示させるか
          end_year:       (Time.now.year), # 何年まで表示させるか
          default:        Date.new(1989, 1, 1), # 最初に表示されている年月日
          date_separator: '/') # 年月日を仕切る文字
        %></p>
  </div>

  <div>
    <%= form.label :description %><br>
    <%= form.text_area :description , size: "40x10" ,:placeholder => "内容を記載してください。"%>
  </div>

  <%= form.submit "レポート編集"  %>
  <% end %>
  <br>
<button type="button" class="btn btn-info" ><%= link_to "戻る", customer_management_path, id: "back_to_show" %></button>
  <br>
  <br>
  <br>
  <br>
  <br>
  <br>
</main>