<main>
<br>
<br>
<%= form_with(model: @customeruser, local: true) do |user| %>
  <h2>ユーザ登録</h2>
   <% if @customeruser.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@customeruser.errors.count) %> <%= t('view.error') %></h2>
      <ul>
        <% @customeruser.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<br>
<%= user.select :customer_id, options_for_select(Customer.all.map{|customer| [customer.name, customer.id]}) %>

  <div class="customeruser">
    <%= user.label :department %><br>
    <%= user.text_field :department %>
  </div>

  <div class="customeruser">
    <%= user.label :name %><br>
    <%= user.text_field :name %>
  </div>

  <div class="customeruser">
    <%= user.label :email %><br>
    <%= user.text_field :email %>
  </div>


  <div class="customeruser">
    <%= user.label :tel %><br>
    <%= user.text_field :tel %>
  </div>

  <div class="customeruser">
    <%= user.label :meta %><br>
    <%= user.text_area :meta , size: "40x10" %>
  </div>

  <p></p>
  <div class="actions">
    <%= user.submit '登録' %>
  </div>
<br>
<br>
<% end %>
<button type="button" class="btn btn-info" ><%= link_to "戻る", customer_managements_path, id: "back_to_menu" %></button>
<br>
<br>
<br>
<br>
</main>
