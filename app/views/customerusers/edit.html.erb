<main>
<br>
<%= form_with(model: @customeruser, url: customeruser_path, local: true) do |user| %>
  <h3>ユーザー編集</h3>
   <% if @customeruser.errors.any? %>
    <div id="error_explanation">
      <h2><%= @customeruser.errors.count %> <%= t('view.error') %></h2>
      <ul>
        <% @customeruser.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<br>
    <h6>会社名</h6>
  <% @customer.each do |ct| %>
    <h4><%= ct.name %></h4>
  <% end %>
<br>
  <div class="customeruser">
    <%= user.label :department %><br>
    <%= user.text_field :department ,:placeholder => " 所属部署・など記入してください。" %>
  </div>

  <div class="customeruser">
    <%= user.label :name %><br>
    <%= user.text_field :name ,:placeholder => "山田 花子 必須 入力です。" %>
  </div>

  <div class="customeruser">
    <%= user.label :email %><br>
    <%= user.text_field :email ,:placeholder => "abc@email.com 必須入力です。" %>
  </div>


  <div class="customeruser">
    <%= user.label :tel %><br>
    <%= user.text_field :tel ,:placeholder => "123-456-7890"%>
  </div>

  <div class="customeruser">
    <%= user.label :meta %><br>
    <%= user.text_area :meta , size: "40x10" %>
  </div>

  <p></p>
  <div class="actions">
    <%= user.submit '更新' %>
  </div>
<br>
<br>
<% end %>
<button type="button" class="btn btn-info" ><%= link_to "戻る", customerusers_path, id: "back_to_menu" %></button>
<br>
<br>
<br>
<br>
</main>
